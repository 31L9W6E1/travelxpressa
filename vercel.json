{
  "framework": "vite",
  "installCommand": "npm ci --prefix frontend",
  "buildCommand": "npm run build --prefix frontend",
  "outputDirectory": "frontend/dist",
  "rewrites": [
    {
      "source": "/sitemap.xml",
      "destination": "https://api.visamn.com/sitemap.xml"
    },
    {
      "source": "/robots.txt",
      "destination": "https://api.visamn.com/robots.txt"
    },
    {
      "source": "/api/(.*)",
      "destination": "https://api.visamn.com/api/$1"
    },
    {
      "source": "/uploads/(.*)",
      "destination": "https://api.visamn.com/uploads/$1"
    },
    { "source": "/(.*)", "destination": "/" }
  ]
}
