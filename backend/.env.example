# Server Configuration
NODE_ENV=development
PORT=3000

# Database Configuration (PostgreSQL for production)
DATABASE_URL="postgresql://user:password@localhost:5432/ds160_db?schema=public"

# JWT Configuration
JWT_SECRET=generate-a-secure-random-string-at-least-32-chars
JWT_REFRESH_SECRET=generate-another-secure-random-string
JWT_EXPIRES_IN=15m
JWT_REFRESH_EXPIRES_IN=7d

# Encryption (AES-256 for sensitive data)
ENCRYPTION_KEY=generate-a-32-byte-hex-string-for-aes-256

# CORS Configuration
CORS_ORIGIN=http://localhost:5173

# Rate Limiting
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=100
AUTH_RATE_LIMIT_MAX=5

# Session Configuration
SESSION_SECRET=generate-a-secure-session-secret

# Email Configuration (for notifications)
SMTP_HOST=smtp.example.com
SMTP_PORT=587
SMTP_USER=your-email@example.com
SMTP_PASS=your-email-password
EMAIL_FROM=noreply@ds160helper.com

# Redis Configuration (for sessions/caching)
REDIS_URL=redis://localhost:6379

# File Upload Configuration
MAX_FILE_SIZE=5242880
UPLOAD_DIR=./uploads

# Logging
LOG_LEVEL=info
LOG_FORMAT=combined

# Monitoring
SENTRY_DSN=your-sentry-dsn-for-error-tracking

# Feature Flags
ENABLE_2FA=false
ENABLE_AGENT_MODE=false

# OAuth Configuration
GOOGLE_CLIENT_ID=your-google-client-id
GOOGLE_CLIENT_SECRET=your-google-client-secret
FACEBOOK_APP_ID=your-facebook-app-id
FACEBOOK_APP_SECRET=your-facebook-app-secret

# OpenAI Translation (for multilingual CMS news drafts)
OPENAI_API_KEY=your-openai-api-key
OPENAI_TRANSLATION_MODEL=gpt-4.1-mini

# Kiwi Tequila Flight Search API
KIWI_API_KEY=your-kiwi-tequila-api-key

# Telegram Notifications (application submit alerts)
TELEGRAM_BOT_TOKEN=
TELEGRAM_CHAT_ID=
TELEGRAM_MESSAGE_THREAD_ID=

# Frontend URL (for OAuth redirects)
FRONTEND_URL=http://localhost:5173

# QPay Payment Gateway (Mongolia)
# Get credentials from QPay merchant dashboard: https://merchant.qpay.mn
QPAY_BASE_URL=https://merchant.qpay.mn/v2
QPAY_USERNAME=your-qpay-username
QPAY_PASSWORD=your-qpay-password
QPAY_INVOICE_CODE=your-invoice-code
QPAY_CALLBACK_URL=https://your-domain.com/api/payments/webhook/qpay
QPAY_USE_SANDBOX=true
